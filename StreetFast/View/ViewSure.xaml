<Window x:Class="StreetLourd.View.ViewSure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreetLourd.View"
        mc:Ignorable="d"
        Title="ViewSure" Height="120" Width="200">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" Text="Es-tu sûr ?" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="Data" HorizontalAlignment="Left" Margin="0,0,0,0" Text="Id" TextWrapping="Wrap" VerticalAlignment="Top" Visibility="Hidden"/>
        <Button x:Name="BtYes" Content="Oui" HorizontalAlignment="Center" Margin="0,50,100,0" VerticalAlignment="Top" Width="50"/>
        <Button x:Name="BtNo" Content="Non" HorizontalAlignment="Center" Margin="100,50,0,0" VerticalAlignment="Top" Width="50" Click="BtNo_Click"/>

    </Grid>
</Window>
