<Page x:Class="StreetLourd.View.ViewMapButton"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StreetLourd.View"
      mc:Ignorable="d" 
      d:DesignHeight="40" d:DesignWidth="500"
      Title="ViewMapButton" Background="#B2FFFFFF">

    <Grid>
        <Border BorderThickness="2" BorderBrush="Black"/>
        <Button x:Name="Bt" Content="Nom de le map" HorizontalAlignment="Left" Margin="25,0,0,0" VerticalAlignment="Center" Width="200" HorizontalContentAlignment="Left" Padding="5,1,1,1"/>
        <TextBlock x:Name="TxType" HorizontalAlignment="Left" Margin="230,0,0,0" Text="Cross-Country" TextWrapping="Wrap" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBlock x:Name="TxKm" HorizontalAlignment="Left" Margin="325,0,0,0" Text="100 km" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <TextBlock x:Name="TxTries" HorizontalAlignment="Left" Margin="375,0,0,0" Text="500 enregistrements" TextWrapping="Wrap" VerticalAlignment="Center"/>
        <CheckBox x:Name="Check" Content="" HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Center" Visibility="Hidden"/>
    </Grid>
</Page>
